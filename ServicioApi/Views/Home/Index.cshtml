@model IEnumerable<ServicioApi.Models.Clientes>
@{
    ViewData["Title"] = "Busqueda";
}


<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Busqueda</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>



<body>
    <center></center><h2>Busqueda</h2></center>
    

    @using (Html.BeginForm("Index", "Home"))
    {
    
                @Html.Label("Nombre o Apellido")
                @Html.TextBox("txtNombre")
    
    
                @Html.Label("Numero Documento")
                @Html.TextBox("txtnumerodocumento")
    
                @Html.Label("Nombre Documento")
                @Html.TextBox("txtnombredocumento")
    
                @Html.Label("Direccion")
                @Html.TextBox("txtdireccion")
    
                <input type="submit" class="btn btn-primary" value="Buscar" />
                }


                <table class="table table-sm table-striped table-bordered m-2">
                    <thead>
                        <tr>
                            <th scope="col">Primer Apellido</th>
                            <th scope="col">Segundo Apellido</th>
                            <th scope="col">Primer Nombre</th>
                            <th scope="col">Segundo Nombre</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in Model)
                        {
                            <tr>
                                <td>@r.Primerapellido</td>
                                <td>@r.Segundoapellido</td>
                                <td>@r.Primernombre</td>
                                <td>@r.Segundonombre</td>
                            </tr>

                        }
                    </tbody>
                </table>
</body>
</html>